<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
    <ImageView
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:layout_alignParentTop="true"
    		android:id="@+id/banner"/>
    <RelativeLayout
    		android:layout_height="wrap_content"
    		android:layout_width="fill_parent"
    		android:background="@drawable/irish">
    <Button 
    		android:id="@+id/Bview_events" 
    		android:text="What's Doin?"
    		android:layout_height="wrap_content" 
    		android:layout_width="163dip"
    		android:layout_below="@id/banner">
    </Button>
    
    <Button 
    		android:layout_alignParentRight="true"
    		android:layout_below="@id/banner"
    		android:layout_width="163dip" 
    		android:text="Add Assignment" 
    		android:id="@+id/Badd_assignment" 
    		android:layout_height="wrap_content">
    </Button>
    <Button 
    		android:layout_alignParentLeft="true"
    		android:layout_below="@id/Bview_events"
    		android:layout_width="163dip" 
    		android:text="Irish Update" 
    		android:id="@+id/Birish_update" 
    		android:layout_height="wrap_content">
    </Button>
    
    </RelativeLayout>
        
</LinearLayout>
